<% include ./partials/boilerplate %>
<% include ./partials/navigation %>

<div class="main-content">

  <div class="form">

    <form action="/auth/register" method="POST">

      <div class="entry">

        <div class="label"><h1>Username</h1></div>

        <input name="username" type="text" placeholder="Username" required />

      </div>

      <div class="entry">

        <div class="label"><h1>Nickname</h1></div>

        <input name="nick" type="text" placeholder="Nickname" required />

      </div>

      <div class="entry">

        <div class="label"><h1>Password</h1></div>

        <input name="password" type="password" placeholder="Password" required />

      </div>

      <div class="button-set">

        <input type="submit" value="Register" />

        <input type="reset" value="Cancel" onClick="window.location='/'" />

      </div>

    </form>

  </div>

</div>

<% include ./partials/end %>
